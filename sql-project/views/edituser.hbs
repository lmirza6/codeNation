<body class="editUserBody">  
    <h1>Edit user page</h1>
    <h2>Users from database:</h1>
    <ul>
        {{#each users}}
            <li><b>ID:</b> {{this.id}} <b>Username:</b> {{this.user_name}}<b> Email:</b> {{this.email}}  </li>
        {{/each}}
    </ul>
        <form action="/edituser" method="POST" autocomplete="off">
        <input class="edituserinput" type="text" name="id" placeholder="Id"/>
        <input class="edituserinput" type="text" name="user_name" placeholder="Username"/>
        <button class="edituserBtn" type="submit">Edit User</button>
    </form>
